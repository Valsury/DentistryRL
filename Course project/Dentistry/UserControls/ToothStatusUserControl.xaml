<UserControl x:Class="Dentistry.UserControls.ToothStatusUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dentistry.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <Viewbox>
        <Grid Width="30" Height="30">
            <Image x:Name="ImageTooth" Width="30" Height="30" Margin="0">
            </Image>
            <TextBlock x:Name="BlockStatus" Text="{Binding ToothStatu.AbbreviationToothStatus}" Margin="10 5 0 0" FontStyle="Normal" FontSize="14" FontWeight="Bold"></TextBlock>
        </Grid>
    </Viewbox>
</UserControl>
