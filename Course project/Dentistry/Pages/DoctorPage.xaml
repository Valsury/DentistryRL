            <Popup x:Name="popUpStatus" StaysOpen="False" Placement="Mouse" MaxWidth="160" AllowsTransparency="True">
                <StackPanel Background="AliceBlue">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource CommonText}" Text="Здоров">
                        </TextBlock>
                        <RadioButton Name="RadioHelth" Tag="Здоров" GroupName="ToothStatus" Checked="Radio_Checked"></RadioButton>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource CommonText}" Text="Требуется лечение">
                        </TextBlock>
                        <RadioButton Name="RadioNeedTreatment" Tag="Требуется лечение" GroupName="ToothStatus" IsChecked="{Binding IdToothStatus}" Checked="Radio_Checked"></RadioButton>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource CommonText}" Text="Вылечен">
                        </TextBlock>
                        <RadioButton Name="RadioCured" Tag="Вылечен" GroupName="ToothStatus" Checked="Radio_Checked"></RadioButton>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource CommonText}" Text="Имплант"></TextBlock>
                        <RadioButton Name="RadioImplant" Tag="Имплант" GroupName="ToothStatus" Checked="Radio_Checked"></RadioButton>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource CommonText}" Text="Удален">
                        </TextBlock>
                        <RadioButton Name="RadioRemoved" Tag="Удален"  GroupName="ToothStatus" Checked="Radio_Checked"></RadioButton>
                    </StackPanel>
                </StackPanel>
            </Popup>
        </Canvas>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">

                <TextBlock Text="Выберите клиента:"
                           Margin="10"
                           Style="{StaticResource CommonText}"
                           Width="150"></TextBlock>

                <ComboBox Name="ComboClients"
                          IsEditable="True"
                          Background="White"
                          FontSize="14"
                      Margin="10"
                  DisplayMemberPath="FullName"
                          SelectionChanged="ComboClients_SelectionChanged">
                </ComboBox>
            </StackPanel>

            <Grid Name="GridAddTooth" Grid.Row="1" Margin="0 80 0 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="400"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Зуб:" 
                                   Style="{StaticResource CommonText}"
                                   Width="150">
                        </TextBlock>
                        <TextBox Width="150" 
                                 Margin="10"
                                 Name="TboxIdTooth">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Зубной статус:" 
                                   Style="{StaticResource CommonText}"
                                   Width="150">
                        </TextBlock>
                        <TextBox Width="150" 
                                 Margin="10"
                                 Name="TboxIdToothStatus"
                                 Visibility="Collapsed">
                        </TextBox>
                        <ComboBox
                             IsEditable="True"
                          Background="White"
                          FontSize="14"
                            BorderThickness="1"
                            Name="comboToothStatus" SelectedIndex="0">
                            <ComboBoxItem Content="Здоров"></ComboBoxItem>
                            <ComboBoxItem Content="Требуется лечение"></ComboBoxItem>
                            <ComboBoxItem Content="Вылечен"></ComboBoxItem>
                            <ComboBoxItem Content="Имплант"></ComboBoxItem>
                            <ComboBoxItem Content="Удален"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Услуга:" 
                                   Style="{StaticResource CommonText}"
                                   Width="150">
                        </TextBlock>

                        <ComboBox
                             IsEditable="True"
                          Background="White"
                          FontSize="14"
                            BorderThickness="1"
                            Name="comboService" 
                            DisplayMemberPath="NameService"
                            SelectionChanged="comboService_SelectionChanged"
                            SelectedIndex="0">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Диагноз: " 
                                   Style="{StaticResource CommonText}"
                                   Width="150"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center">
                        </TextBlock>

                        <TextBox
                            Name="TBoxDiagnosis"
                            Width="330"
                            Height="50"
                            BorderThickness="4"
                            TextWrapping="Wrap">
                        </TextBox>
                    </StackPanel>
                    
                   

                    <Button Content="Добавить" Name="BtnAddTooth" 
                            Click="Button_Click"
                            Margin="10"></Button>

                  
                </StackPanel>
                
            </Grid>
       
        </Grid>
        
    </Grid>
</Page>
