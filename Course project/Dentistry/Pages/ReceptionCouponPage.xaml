        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Center" Margin="0 0 0 0">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Рекомендации" 
                       TextWrapping="Wrap" 
                       Width="100"
                       TextAlignment="Left"
                       Style="{StaticResource CommonText}"></TextBlock>
                    <TextBox Name="TBoxCurrentRecomendations"
                             TextWrapping="Wrap"
                             Width="200"
                             Height="30"
                             BorderThickness="3"
                             Margin="5"></TextBox>
                </StackPanel>



                <Button Name="BtnAdd"
                        Click="BtnAdd_Click"
                    FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE710;"
                        FontWeight="Bold"
                        FontSize="16"
                        Foreground="Black"
                        BorderThickness="0"
                        Background="White"
                        Width="20"
                        Height="20"
                        ></Button>
            </StackPanel>
            <StackPanel Grid.Column="1"     
                        HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0 -30 0 0">


                <Button Content="&#xE956;" 
                        FontFamily="Segoe MDL2 Assets"
                    Name="BtnPrint"
                    Click="BtnPrint_Click"
                        Width="50"
                        Background="Transparent"
                        Foreground="Black"
                        FontSize="26"
                        BorderThickness="0"
