<Page x:Class="Dentistry.Pages.CurrentReceptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dentistry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Окно просмотра приемов">

    <Grid>
        <DataGrid Name="DGridDoctorReceptions" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Доктор"
                    Width="*"
                    Binding="{Binding Doctor.FullNameDoctor}"></DataGridTextColumn>
                <DataGridTextColumn
                    Header="Клиент"
                    Width="*"
                    Binding="{Binding Client.FullNameClient}"></DataGridTextColumn>
                <DataGridTextColumn
                    Header="Диагноз"
                    Width="*"
                    Binding="{Binding DiagnosisReception}"></DataGridTextColumn>

                <DataGridTextColumn
                    Header="Дата приема"
                    Width="*"
                    Binding="{Binding DateReception, StringFormat={}dd.MM.yyyy}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
